OPENAI_API_KEY=YOUR_KEY
MODEL=gpt-4o-mini

# Gmail scopes: readonly fetch + compose for drafts
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.compose

# Defaults for tools
GMAIL_DEFAULT_QUERY=is:unread
GMAIL_DEFAULT_LABEL=INBOX
AGENT_MAX_TURNS=8

# Headless OAuth (preferred in agent mode). Base64 of token.json and credentials.json.
# linux:  base64 -w0 token.json
# macOS:  base64 token.json | tr -d '\n'
GMAIL_TOKEN_JSON_B64=
GMAIL_CLIENT_SECRET_JSON_B64=
HEADLESS_OAUTH=true

# Optional GitHub App (only if you will call GitHub APIs from tools)
GITHUB_APP_ID=
GITHUB_INSTALLATION_ID=
GITHUB_PRIVATE_KEY_B64=
GITHUB_WEBHOOK_SECRET=
